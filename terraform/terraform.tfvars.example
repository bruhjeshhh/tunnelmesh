# DigitalOcean API Token - set via environment variable:
#   export TF_VAR_do_token="dop_v1_xxx"
# Get yours at: https://cloud.digitalocean.com/account/api/tokens

# Your domain name (must be managed in DigitalOcean DNS)
domain = "example.com"

# Subdomain for the coordination server (default: "tunnelmesh")
# subdomain = "tunnelmesh"

# Authentication token for mesh peers
# Generate with: openssl rand -hex 32
auth_token = ""

# GitHub owner for container image (default: "zombar")
# github_owner = "zombar"

# Docker image tag (default: "latest")
# image_tag = "latest"

# Mesh network CIDR (default: "10.99.0.0/16")
# mesh_cidr = "10.99.0.0/16"

# DigitalOcean region (default: "ams")
# Options: nyc, sfo, ams, sgp, lon, fra, tor, blr, syd
# region = "ams"

# --- WireGuard Peer Droplet ---

# Enable the WireGuard peer droplet (default: true)
# wg_peer_enabled = true

# Name for the WireGuard peer - becomes {name}.{domain} DNS record
# wg_peer_name = "tm-net"

# Droplet size (default: s-1vcpu-512mb-10gb = $4/mo)
# Options: s-1vcpu-512mb-10gb ($4/mo), s-1vcpu-1gb ($6/mo)
# wg_peer_size = "s-1vcpu-512mb-10gb"

# WireGuard UDP listen port (default: 51820)
# wg_listen_port = 51820

# SSH key name for droplet access (from DigitalOcean account)
# ssh_key_fingerprint = "my-ssh-key"
